---
import GitHub from "./icons/GitHub.astro"

import LinkButton from "./LinkButton.astro"


const PROJECTS = [
  {
    title: "CONSULTORIA VETERINARIA",
    description:
      "nuestra innovadora plataforma de consultoría veterinaria desarrollada en Filament y Laravel, diseñada para proporcionar soluciones efectivas y eficientes en el cuidado de mascotas. Nuestra aplicación ofrece una experiencia integral que une la potencia de Filament para la interfaz de usuario y Laravel para la lógica del negocio, creando así un entorno robusto y fácil de usar.",
    link: "",
    github: "https://github.com/jdicans/consultor-veterinario",
    image: "/projects/consultorio.png",
    
  },
  {
    title: "Diseño de landing peges-NATURA TOURS",
    description:
      "la landing page diseñada con precisión y creatividad para Natura Tours, una experiencia visual cautivadora creada utilizando la potente plataforma de diseño Figma.",
    link: "",
    image: "/projects/naturatours.png",
    
  },
]
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Ver código fuente
            </LinkButton>
          )}
          <LinkButton href={link}>
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
              </>
            </svg>
            Ir al sitio web
          </LinkButton>
        </footer>
      </article>
    ))
  }
</section>
